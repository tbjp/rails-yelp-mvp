<div class="card" style="max-width: 18rem;">
  <img class="card-img-top" src="https://loremflickr.com/320/240/dish,<%= restaurant.category %>/all?lock=1" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= restaurant.name %></h5>
    <p class="card-text"><%= restaurant.category.capitalize %></p>
    <p class="card-text"><%= restaurant.address %> - <%= restaurant.phone_number %></p>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="btn btn-secondary">More info</div>
    <% end %>
  </div>
</div>
